#!/bin/bash
#--------------------------------------------------------------------------
# $Id: spaces.sh,v 1.3 2005/02/22 12:31:08 ggorjan Exp $
#--------------------------------------------------------------------------
# Change spaces in file or map names with the underscore character, i.e., _
#--------------------------------------------------------------------------
# Needed: /
#--------------------------------------------------------------------------

# Nothing to configure below!
#--------------------------------------------------------------------------
NAME=$(basename $0)
USAGE="$NAME"

for FILE in *; do
    TMP=`echo "$FILE" | grep '\ '`
    if [ -n "$TMP" ]; then
        echo $FILE
        mv "$FILE" `echo "$FILE" | sed 's/\ /_/g'`
    fi
done

exit 0

#--------------------------------------------------------------------------
# spaces.sh ends here
